= form_for @row_number do |f|
  - if @row_number.errors.any?
    #error_explanation
      %h2= "#{pluralize(@row_number.errors.count, "error")} prohibited this row_number from being saved:"
      %ul
        - @row_number.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :row_number
    = f.number_field :row_number
  .actions
    = f.submit 'Save'
