= form_for [:creator,@user] do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :shipping_street_address
    = f.text_field :shipping_street_address
  .field
    = f.label :shipping_zip
    = f.text_field :shipping_zip
  .field
    = f.label :shipping_city
    = f.text_field :shipping_city
  .actions
    = f.submit 'Save'
