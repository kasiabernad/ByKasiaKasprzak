- if !@order_item.nil? && @order_item.errors.any?
  .alert.alert-danger
    %ul
      - @order_item.errors.full_messages.each do |msg|
        %li= msg
- if @order_items.size == 0
  %p.text-center
    There are no items in your shopping cart.  Please #{link_to "go back", root_path} and add some items to your cart.
- else
  - @order_items.each do |order_item|
    = render 'creator/carts/cart_row', bracelet: order_item.bracelet, order_item: order_item, show_total: true
  %hr
  %h4.text-right
    Subtotal Price:
    %span{:style => "color: green"}= number_to_currency current_order.subtotal
    = link_to 'Podsumowanie', creator_order_path(current_order)