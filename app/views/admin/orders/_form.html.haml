= form_for [:admin, @order] do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :bracelet_id
    = f.number_field :bracelet_id
  .field
    = f.label :price
    = f.number_field :price
  .actions
    = f.submit 'Save'
